<div class="wrapper">
  <div class="reversi-home-screen">
    <h2 class="section-title">Reversi</h2>
    <div class="flex">
      <input
        class="opponent-player click-color"
        type="button"
        data-value="Solo-player"
        value="Solo Play"
      />
      <input
        class="opponent-player"
        type="button"
        data-value="two-player"
        value="Two Paly"
      />
    </div>
    <div class="start-click">
      <input type="button" class="game-start" value="START" />
    </div>
  </div>
</div>

<style>
  .wrapper {
    max-width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 1s;
  }

  .reversi-home-screen {
    max-width: 800px;
    margin: 0 auto;
    padding: 10px;
  }

  .section-title {
    font-size: 100px;
    font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
    text-align: center;
    margin-bottom: 20px;
  }

  .flex {
    display: flex;
    justify-content: space-between;
  }

  .opponent-player {
    font-size: 1.1rem;
    font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
    padding: 20px 50px;
    margin: 15px;
    border-radius: 10px;
    border: solid 2px #586365;
    transition: all 0.3s;
  }

  .opponent-player:hover {
    opacity: 0.8;
  }

  .start-click {
    text-align: center;
  }

  .game-start {
    width: 350px;
    font-size: 1.5rem;
    font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
    padding: 20px 50px;
    margin: 15px;
    border-radius: 10px;
    border: solid 2px #586365;
    transition: all 0.2s;
  }

  .game-start:hover {
    opacity: 0.8;
  }

  .game-start:active {
    background-color: aquamarine;
  }

  .click-color {
    background-color: #ffe67d;
  }

  @media (max-width: 500px) {
    .section-title {
      font-size: 80px;
    }

    .opponent-player {
      font-size: 1rem;
      padding: 15px 35px;
      margin: 15px;
      border-radius: 10px;
    }

    .game-start {
      width: 280px;
      font-size: 1.5rem;
      padding: 20px 50px;
      margin: 15px;
    }
  }
</style>

<script>
  const player = document.querySelectorAll(".opponent-player");
  for (const palyer_list of player) {
    palyer_list.addEventListener("click", function () {
      const background_color = document.querySelector(".click-color");
      background_color.classList.remove("click-color");
      palyer_list.classList.toggle("click-color");
    });
  }

  const game_start = document.querySelector(".start-click");
  game_start.addEventListener("click", function () {
    const opponent_player = document.querySelector(".click-color");
    const game_screen = document.querySelector(".wrapper");
    console.log(opponent_player.getAttribute("data-value"));
    game_screen.style.opacity = "0";
    setTimeout(function () {
      game_screen.style.display = "none";
    }, 1100);
  });
</script>
